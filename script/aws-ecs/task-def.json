{
  "family": "gestionepersonale-task",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "taskRoleArn": "arn:aws:iam::565949435749:role/gestionepersonale-ecs-task-role",
  "executionRoleArn": "arn:aws:iam::565949435749:role/gestionepersonale-ecs-execution-role",
  "containerDefinitions": [
    {
      "name": "gestionepersonale",
      "image": "565949435749.dkr.ecr.eu-central-1.amazonaws.com/gestionepersonale:latest",
      "portMappings": [
        { "containerPort": 8080, "protocol": "tcp" }
      ],
      "environment": [
        { "name": "DDL_AUTO", "value": "create" },
        { "name": "AWS_ACCESS_KEY_ID", "value": "" },
        { "name": "AWS_SECRET_ACCESS_KEY", "value": "" },
        { "name": "SPRING_PROFILES_ACTIVE", "value": "aws" },
        { "name": "AWS_REGION", "value": "eu-central-1" },
        { "name": "AWS_RDS_URL", "value": "jdbc:mysql://gestionepersonale-aurora-cluster.cluster-c9i2mk6uk701.eu-central-1.rds.amazonaws.com:3306/gestionepersonale" },
        { "name": "AWS_RDS_USERNAME", "value": "gestionepersonale_user" },
        { "name": "AWS_RDS_PASSWORD", "value": "gestionepersonale_pass" },
        { "name": "RDS_HOST", "value": "gestionepersonale-aurora-cluster.cluster-c9i2mk6uk701.eu-central-1.rds.amazonaws.com" },
        { "name": "RDS_PORT", "value": "3306" },
        { "name": "RDS_DATABASE", "value": "gestionepersonale" },
        { "name": "RDS_USERNAME", "value": "gestionepersonale_user" },
        { "name": "RDS_PASSWORD", "value": "gestionepersonale_pass" }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/gestionepersonale-app",
          "awslogs-region": "eu-central-1",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ]
}
